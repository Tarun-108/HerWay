<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".navigationdrawer.ChangePinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/change_pin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="21dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />
        <TextView
            android:fontFamily="@font/poppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:textSize="22sp"
            android:text="Change Pin"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:fontFamily="@font/poppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="24dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp"
            android:text="You will need to enter this pin to deactivate SOS mode"/>

        <EditText
            android:id="@+id/curr_pin_ed_text"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="left"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="24dp"
            android:ems="13"
            android:fontFamily="@font/poppins"
            android:hint="Enter Current Pin."
            android:inputType="phone"
            android:textColorHint="@color/text_color_light"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:backgroundTint="@color/color_secondary"/>
        <EditText
            android:id="@+id/new_pin_ed_text"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="left"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="24dp"
            android:ems="13"
            android:textColorHint="@color/text_color_light"
            android:fontFamily="@font/poppins"
            android:hint="Enter New Pin."
            android:inputType="phone"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:backgroundTint="@color/color_secondary"/>
        <EditText
            android:id="@+id/otp_ed_text"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="left"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="24dp"
            android:ems="13"
            android:textColorHint="@color/text_color_light"
            android:fontFamily="@font/poppins"
            android:hint="Confirm New Pin."
            android:inputType="phone"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:backgroundTint="@color/color_secondary"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/otp_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="24dp"
            android:padding="4dp"
            android:background="@drawable/btn_chk"
            android:fontFamily="@font/poppins"
            android:text="    Change Pin    "
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </LinearLayout>

</ScrollView>