<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".navigationdrawer.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
    <ImageView
        android:id="@+id/change_pin_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="21dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/bb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:src="@drawable/maleuser" />
        <TextView
            android:id="@+id/phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 123-456-7890"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="23dp"
            android:layout_gravity="left"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/ed_name"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_gravity="left"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="24dp"
            android:ems="13"
            android:fontFamily="@font/poppins"
            android:hint="Enter Name."
            android:inputType="textPersonName"

            android:padding="17dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_marginTop="23dp"
            android:layout_gravity="left"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/ed_email"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_gravity="left"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="24dp"
            android:ems="13"
            android:fontFamily="@font/poppins"
            android:hint="Enter Email Add."
            android:inputType="textEmailAddress"

            android:padding="17dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Address"
            android:layout_marginTop="23dp"
            android:layout_gravity="left"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/ed_home_add"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_gravity="left"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="24dp"
            android:ems="13"
            android:fontFamily="@font/poppins"
            android:hint="XXXXXXXXXXXXX."
            android:inputType="phone"

            android:padding="17dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Update_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="24dp"
            android:padding="4dp"
            android:background="@drawable/btn_chk"
            android:fontFamily="@font/poppins"
            android:text="       Update       "
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </LinearLayout>
</ScrollView>